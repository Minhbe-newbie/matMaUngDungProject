<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/border_textfield">

    <TextView
        android:id="@+id/tvTenMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Nhập tên môn vào đây"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:letterSpacing="0.01"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/HocPhan"
        android:text="Học phần:"
        android:textSize="14dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTenMon"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/tvHocPhan"
        android:text="tvHocPhan"
        android:textSize="14dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="11dp"
        android:fontFamily="@font/roboto_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTenMon"
        android:layout_toRightOf="@id/HocPhan"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/ThoiGian"
        android:text="Thời gian:"
        android:textSize="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HocPhan"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/tvThoiGian"
        android:text="tvThoiGian"
        android:textSize="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ThoiGian"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/DiaDiem"
        android:text="Địa điểm:"
        android:textSize="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvThoiGian"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/tvDiaDiem"
        android:text="tvDiaDiem"
        android:textSize="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvThoiGian"
        android:layout_toRightOf="@id/DiaDiem"

        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/GiangVien"
        android:text="Giảng viên:"
        android:textSize="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDiaDiem"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/tvGiangVien"
        android:text="tvGiangVien"
        android:textSize="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDiaDiem"
        android:layout_toRightOf="@id/GiangVien"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

</RelativeLayout>