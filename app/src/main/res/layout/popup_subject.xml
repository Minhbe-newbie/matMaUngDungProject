<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/border_textfield">

    <TextView
        android:id="@+id/tvTenMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Nhập tên môn vào đây"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:letterSpacing="0.01"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/HocPhan"
        android:text="Học phần:"
        android:textSize="14dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTenMon"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/tvHocPhan"
        android:text="tvHocPhan"
        android:textSize="14dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="11dp"
        android:fontFamily="@font/roboto_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTenMon"
        android:layout_toRightOf="@id/HocPhan"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/ThoiGian"
        android:text="Thời gian:"
        android:textSize="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HocPhan"
        android:letterSpacing="0.04"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />


    <ScrollView
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_marginTop="170dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvThoiGian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ThoiGian"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_light"
                android:letterSpacing="0.04"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:text="tvThoiGian"
                android:textSize="14dp" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnDKH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="20dp"
        android:text="Đăng ký"

        />
</RelativeLayout>