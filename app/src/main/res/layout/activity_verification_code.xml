<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.IntroActivity">


    <ImageView

        android:layout_width="115dp"
        android:layout_height="131dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="147dp"
        android:src="@drawable/img_logo_kma"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="346dp" />

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-6dp"
        app:srcCompat="@drawable/bn_bottom_intro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="1dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="HỌC VIỆN KỸ THUẬT MẬT MÃ"
            android:textSize="15dp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="29dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Nhập mã xác thực"
            android:textColor="#EE2F2A"
            android:textSize="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Vui lòng nhập mã OTP được gửi qua Email" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border_textfield"
                    android:fontFamily="@font/roboto_bold"
                    android:hint=""
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:textSize="15dp" />

                <EditText

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_textfield"
                    android:fontFamily="@font/roboto_bold"
                    android:hint=""
                    android:paddingStart="10dp"
                    android:textSize="15dp" />

                <EditText

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_textfield"
                    android:fontFamily="@font/roboto_bold"
                    android:hint=""
                    android:paddingStart="10dp"
                    android:textSize="15dp" />

                <EditText

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_textfield"
                    android:fontFamily="@font/roboto_bold"
                    android:hint=""
                    android:paddingStart="10dp"
                    android:textSize="15dp" />

                <EditText

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_textfield"
                    android:fontFamily="@font/roboto_bold"
                    android:hint=""
                    android:paddingStart="10dp"
                    android:textSize="15dp" />

                <EditText

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_textfield"
                    android:fontFamily="@font/roboto_bold"
                    android:hint=""
                    android:paddingStart="10dp"
                    android:textSize="15dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"

            android:orientation="vertical">

            <Button
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_textfield"
                android:gravity="center"
                android:text="Xác nhận" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Đã nhớ được mật khẩu ?" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Gửi lại ( )"
                    android:textColor="@color/red_500" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>