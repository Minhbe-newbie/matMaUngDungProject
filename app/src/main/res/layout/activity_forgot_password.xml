<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="115dp"
        android:layout_height="131dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="147dp"
        android:src="@drawable/img_logo_kma"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="346dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-6dp"
        app:srcCompat="@drawable/bn_bottom_intro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="1dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="HỌC VIỆN KỸ THUẬT MẬT MÃ"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="29dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Quên mật khẩu"
            android:textColor="#EE2F2A"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="HỌC VIỆN KỸ THUẬT MẬT MÃ"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:weightSum="2">

            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="340dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/border_textfield"
                android:fontFamily="@font/roboto_bold"
                android:hint="Tên đăng nhập"
                android:paddingStart="10dp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="340dp"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/border_textfield"
                android:fontFamily="@font/roboto_bold"
                android:hint="Email"
                android:paddingStart="10dp"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"

            android:orientation="vertical">

            <Button
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_textfield"
                android:gravity="center"
                android:text="Nhập mã xác thực" />

            <LinearLayout
                android:id="@+id/btnConfirm"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Đã nhớ được mật khẩu ?" />

                <TextView
                    android:id="@+id/btnReLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="Đăng nhập ngay"
                    android:textColor="@color/red_500" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>