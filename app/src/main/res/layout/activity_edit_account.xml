<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.IntroActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="412dp"
        android:layout_height="79dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<!--Nút back này quay về đâu, dùng làm gì
khi mà có thể back ở dưới thanh công cụ => thằng nào viết câu đằng trước ngu vl-->
        <ImageView

            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:src="@drawable/back_red" />

        <TextView

            android:layout_width="253dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:paddingRight="70dp"
            android:text="Thông tin sinh viên"
            android:textColor="@color/red_500"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:letterSpacing="0.01"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="Mã sinh viên"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/edtStudentCode"
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:letterSpacing="0.01"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:textColor="@color/black"
            android:paddingRight="20dp"
            android:text="Họ và tên"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/edtStudentName"
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:letterSpacing="0.01"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="Ngày sinh"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/edtStudentBirth"
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:letterSpacing="0.01"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="Số điện thoại"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edtStudentPhoneNumber"
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border_textfield"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:letterSpacing="0.01"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="Email"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edtStudentEmail"
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border_textfield"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:letterSpacing="0.01"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="Quê quán"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edtHomeTown"
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border_textfield"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveInfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="120dp"
        android:text="Lưu thông tin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
</androidx.constraintlayout.widget.ConstraintLayout>